{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",            
    "moduleResolution": "NodeNext",  
    "esModuleInterop": true,        
    "strict": true,                  
    "skipLibCheck": true,            
    "outDir": "build",               
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
